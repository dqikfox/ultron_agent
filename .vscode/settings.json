{
    "extensions.experimental.affinity": {
        "sixth.sixth-ai": 1
    },

    "amazonQ.telemetry": true,
    "amazonQ.shareCodeWhispererContentWithAWS": true,
    "amazonQ.suppressPrompts": {
        "amazonQChatDisclaimer": true,
        "amazonQChatPairProgramming": true
    },

    "editor.inlineSuggest.enabled": true,
    "editor.suggest.preview": true,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "python": true,
        "javascript": true,
        "typescript": true,
        "json": true,
        "yaml": true,
        "html": true,
        "css": true,
        "sql": true,
        "shellscript": true
    },
    "github.copilot.nextEditSuggestions.enabled": true,
    "github.copilot.advanced": {
        "secret_key": "github-copilot",
        "length": 500,
        "temperature": "",
        "top_p": "",
        "stops": {
            "*": [
                "\n\n\n"
            ],
            "python": [
                "\ndef ",
                "\nclass ",
                "\nif ",
                "\n#"
            ]
        }
    },
    "github.copilot.chat.enabled": true,
    "github.copilot.inlineSuggest.enable": true,

    "http.proxySupport": "override",
    "http.systemCertificates": true,

    "search.followSymlinks": false,
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/venv/**": true,
        "**/__pycache__/**": true
    },

    "python.defaultInterpreterPath": "python",
    "python.analysis.typeCheckingMode": "strict",
    "python.formatting.provider": "black",
    "editor.formatOnSave": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "python.pythonPath": ".venv\\Scripts\\python.exe",
    "files.readonlyInclude": {
        "{**/.c4z/.extsrcs/*.PROTSYM.cbl,**/.c4z/.extsrcs/*.PROTSYM.listing}": true
    },
    "chat.agent.maxRequests": 50,
    
    // AI Toolkit Configuration
    "ai-toolkit.enabled": true,
    "ai-toolkit.openai.apiKey": "${env:OPENAI_API_KEY}",
    "ai-toolkit.preferredModel": "gpt-4o-mini",
    "ai-toolkit.fallbackModel": "gpt-3.5-turbo",
    "ai-toolkit.features.codeCompletion": true,
    "ai-toolkit.features.chatAssistant": true,
    
    // Copilot Monitoring
    "github.copilot.advanced.debug.overrideEngine": "copilot",
    "github.copilot.advanced.debug.testOverrideProxyUrl": "",
    "github.copilot.advanced.debug.filterLogCategories": [],
    "github.copilot.editor.enableAutoCompletions": true
}
